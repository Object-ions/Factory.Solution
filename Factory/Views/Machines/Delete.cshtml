@{
  Layout = "_Layout";
}

@model Factory.Models.Machine;

<div class ="container">

  <h2>Delete Profile</h2>
  <hr />
  <h3>Are you sure you want to delete this profile:</h3>
  @Html.DisplayFor(model => model.Name)
  @using (Html.BeginForm())
  {
    <input type="submit" value="Yes, delete profile" />
    }
    @Html.ActionLink($"No, back to {@Html.DisplayFor(model => model.Name)} profile", "Details", new { id = Model.MachineId })

  <div class="link-card">
    @Html.ActionLink("Show all Machines", "Index")
    @Html.ActionLink("Main Page", "Index", "Home")
  </div>

</div>