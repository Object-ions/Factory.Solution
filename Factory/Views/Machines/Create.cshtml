@{
    Layout = "_Layout";
}

@model Clinic.Models.Patient

<div class="container">

    <h4>Add a new patient</h4>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
        <p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
        <br />
        <input type="submit" value="Add new patient" class="btn btn-primary" />
    }

    <div class="link-card">
        <p>@Html.ActionLink("Back to machines list", "Index")</p>
        <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
    </div>

</div>