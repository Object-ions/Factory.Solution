@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
  <h2> Machines </h2>
  @if (@Model.Count == 0)
  {
    <p>No Machines Have been added yet</p>
  }

  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
</div>

<div class="link-card">
  <p>@Html.ActionLink("Add a machine", "Create")</p>
  <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
</div>