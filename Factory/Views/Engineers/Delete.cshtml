@{
  Layout = "_Layout";
}

@model Factory.Model.Engineer

<div class ="container">

  <h2>Delete Profile</h2>
  <hr />
  <h3>Are you sure you want to delete this profile:</h3>
  @Html.DisplayFor(model => model.Name)
  @Html.DisplayFor(model => model.Specialty)
  @using (Html.BeginForm())
  {
    <input type="submit" value="Yes, delete profile" /> @Html.ActionLink($"No, back to {@Html.DisplayFor(model => model.Name)} profile", "Details", new { id = Model.EngineerId })
  }

  <div class="link-card">
    @Html.ActionLink("Show all engineers", "Index")
    @Html.ActionLink("Main Page", "Index", "Home")
  </div>

</div>