@{
  Layout = '_Layout';
}

@using Factory.Models;

<div class="container">
  <h2> Engineers </h2>
  @if (@Model.Count == 0)
  {
    <p>No engineers have been added yet</p>
  }

  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</div>

<div class="link-card">
  <p>@Html.ActionLink("Add an engineer", "Create")</p>
  <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
</div>